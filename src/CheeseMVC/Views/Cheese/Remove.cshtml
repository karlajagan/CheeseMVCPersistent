@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.title</h1>

@if (Model.Count == 0)
{
    <p>There are no cheeses in the list!</p>
}

<form method="post">
    <ul>
        @foreach (var cheese in Model)
        {
        <div>
            <input type="checkbox" name="cheeseIds" id="@cheese.ID" value="@cheese.ID" />
            <label for="@cheese.ID">@cheese.Name</label>
        </div>
        }
    </ul>
    <input type="submit" value="Remove Selected Cheese(s)" />
</form>

